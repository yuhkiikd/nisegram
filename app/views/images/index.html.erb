<h1>トップページ</h1>
<article class="main-contents">
  <% @images.each do |image| %>
    <div class="main-contents-post">
      <ul class="post-menu clearfix">
        <li>投稿者：<%= image.user.name %></li>
        <li><%= link_to '確認', image %></li>
        <% if logged_in? && current_user.id == image.user.id %>
          <li><%= link_to '編集', edit_image_path(image) %></li>
          <li><%= link_to '削除', image, method: :delete, data: { confirm: '本当に削除しますか？' } %></li>
        <% end %>
      </ul>
      <div class="post-main">
        <% unless image.image.url == nil %>
          <div class="post-image">
            <%= image_tag image.image.url %>
          </div>
        <% end %>
        <p><%= image.content %></p>
      </div>
    </div>
  <% end %>
</article>