<div class="container">
<%= form_with(model: @image, local: true, url: choose_new_or_edit ) do |form| %>
  <% if @image.errors.any? %>
    <div id="error_explanation">
      <h2><%= @image.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @image.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="post_image">
    <%= form.label :image %><br>
    <%= image_tag(@image.image.url) if @image.image && @image.image.url %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>
  <div class="post_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>
</div>